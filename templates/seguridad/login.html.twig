{% extends 'base.html.twig' %}

{% block title %}Inicio de sesión!{% endblock %}

{% block body %}
    <div class="container d-flex" style="height: 900px;">
        <div class="row w-25 m-auto">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Estás logueado cómo {{ app.user.userIdentifier }}, <a href="{{ path('logout') }}">Cerrar sesión</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal">Inicio de sesión</h1>
                <label for="username" class="my-2">Correo electrónico</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                <label for="password" class="my-2">Contraseña</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn-lg btn-primary" type="submit">Acceder</button>
            </form>

            <div class="mt-3">
                <p>¿Aún no tienes cuenta? <a href="{{ path('registro') }}">Registrate aquí</a></p>
            </div>
        </div>
    </div>
{% endblock %}
